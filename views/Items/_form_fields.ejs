<div>
  <label>Name</label>
  <input type="text" name="name" value="<%=item.name %>" />
</div>

<div>
  <label>Category</label>
  <select name="category">
    <% categories.forEach(category => { %> <% if(category.id == item.category) {%>
    <option selected label="<%= category.name %> " value="<%= category.id %> "><% } else { %></option>

    <option label="<%= category.name %> " value="<%= category.id %> "><% } %> <% }) %></option>
  </select>

  <label>Creation Date</label> <input type="date" name="creation date" value="<%= item.createdDate == null ? '' : item.createdDate.toISOString().split('T')[0] %> " />
</div>

<div><label>Item Image</label> <input type="file" name="item image" /></div>

<div><label>Item Count</label> <input type="number" name="item count" min="1" value="<%= item.amount %> " /></div>
<div><label>Description</label> <textarea name="description" <%="item.description" %> ></textarea></div>
